@page
@model razor_page.Pages.HoSoCaNhanModel
@{
    ViewData["Title"] = "Hồ Sơ Cá Nhân";
}

<div class="container mt-5">
    <h2 class="mb-4">Hồ Sơ Của Tôi</h2>

    @if (!string.IsNullOrEmpty(Model.ThongBao))
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @Model.ThongBao
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <form method="post" class="card shadow-sm p-4">

        <div class="row">
            <div class="col-md-4 text-center border-end">
                @{
                    // Hiển thị ảnh Avatar hiện tại hoặc ảnh mặc định
                    var avatarUrl = string.IsNullOrEmpty(Model.ThongTinNguoiDung.LinkAvatar)
                    ? "/images/default-avatar.png"
                    : Model.ThongTinNguoiDung.LinkAvatar;
                }
                <img src="@avatarUrl" alt="Avatar" class="img-thumbnail rounded-circle mb-3" style="width: 200px; height: 200px; object-fit: cover;" />

                <div class="mb-3 text-start">
                    <label class="form-label fw-bold">Đường link ảnh đại diện mới</label>
                    <input class="form-control" type="text" asp-for="LinkAvatarMoi" placeholder="Nhập đường dẫn (URL) ảnh của bạn...">
                    <small class="text-muted">Ví dụ: https://example.com/anh-cua-toi.jpg</small>
                </div>
            </div>

            <div class="col-md-8 pl-md-4">
                <h5 class="mb-3 text-primary">Thông tin tài khoản</h5>

                <div class="mb-3">
                    <label class="form-label fw-bold">Email (Tên đăng nhập)</label>
                    <input type="email" class="form-control" value="@Model.ThongTinNguoiDung.Email" disabled />
                    <small class="text-muted">Không thể thay đổi địa chỉ email.</small>
                </div>

                <div class="mb-3">
                    <label class="form-label fw-bold">Họ và Tên</label>
                    <input type="text" class="form-control" asp-for="TenNguoiDung" required />
                </div>

                <hr class="my-4" />
                <h5 class="mb-3 text-danger">Bảo mật</h5>

                @if (!string.IsNullOrEmpty(Model.LoiMatKhau))
                {
                    <div class="alert alert-danger p-2">
                        @Model.LoiMatKhau
                    </div>
                }

                <div class="mb-3">
                    <label class="form-label fw-bold">Mật khẩu cũ</label>
                    <input type="password" class="form-control" asp-for="MatKhauCu" placeholder="Nhập mật khẩu cũ nếu muốn đổi mật khẩu..." />
                </div>

                <div class="mb-3">
                    <label class="form-label fw-bold">Mật khẩu mới</label>
                    <input type="password" class="form-control" asp-for="MatKhauMoi" placeholder="Nhập mật khẩu mới..." />
                    <small class="text-muted">Bỏ trống 2 ô này nếu bạn KHÔNG muốn đổi mật khẩu.</small>
                </div>

                <div class="text-end mt-4">
                    <button type="submit" class="btn btn-success px-5">Lưu Thay Đổi</button>
                </div>
            </div>
        </div>
    </form>
</div>