@page
@model IndexModel
@using Microsoft.AspNetCore.Http
@{
    ViewData["Title"] = "Trang chủ";
    var userRole = HttpContext.Session.GetString("UserRole");
    var userName = HttpContext.Session.GetString("UserName");
}

<div class="text-center">
    @if (userRole == "Admin")
    {
        <h1 class="display-4 mb-3 mt-4">Trang Quản Trị Admin</h1>
        <p class="lead mb-5">Xin chào <strong>@userName</strong>, vui lòng chọn chức năng quản lý bên dưới:</p>

        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-6 col-lg-3 mb-4">
                    <a asp-page="/Admin/Hoa/Index" class="card text-white bg-primary h-100 text-decoration-none shadow-sm hover-shadow">
                        <div class="card-body d-flex align-items-center justify-content-center flex-column py-5">
                            <h3 class="card-title">🌸 Hoa</h3>
                            <p class="card-text">Quản lý danh sách hoa</p>
                        </div>
                    </a>
                </div>
                <div class="col-md-6 col-lg-3 mb-4">
                    <a asp-page="/Admin/NguoiDung/Index" class="card text-white bg-success h-100 text-decoration-none shadow-sm hover-shadow">
                        <div class="card-body d-flex align-items-center justify-content-center flex-column py-5">
                            <h3 class="card-title">👥 Người Dùng</h3>
                            <p class="card-text">Quản lý tài khoản</p>
                        </div>
                    </a>
                </div>
                <div class="col-md-6 col-lg-3 mb-4">
                    <a asp-page="/Admin/DonHang/Index" class="card text-white bg-warning h-100 text-decoration-none shadow-sm hover-shadow">
                        <div class="card-body d-flex align-items-center justify-content-center flex-column py-5">
                            <h3 class="card-title text-dark">📦 Đơn Hàng</h3>
                            <p class="card-text text-dark">Xem và xử lý đơn</p>
                        </div>
                    </a>
                </div>
                <div class="col-md-6 col-lg-3 mb-4">
                    <a asp-page="/Admin/ThanhToan/Index" class="card text-white bg-info h-100 text-decoration-none shadow-sm hover-shadow">
                        <div class="card-body d-flex align-items-center justify-content-center flex-column py-5">
                            <h3 class="card-title">💳 Thanh Toán</h3>
                            <p class="card-text">Phương thức thanh toán</p>
                        </div>
                    </a>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="home-page-wrapper text-start">

            <section class="break-container hero-section d-flex align-items-end pb-5">
                <div class="ms-5 ps-md-5 mb-5 text-white hero-content">
                    <h1 class="display-2 fw-bold text-uppercase">Mùa Xuân<br>Đang Gọi Tên</h1>
                    <p class="fs-4 mb-4">Khám phá bộ sưu tập hoa tươi mới nhất dành riêng cho bạn.</p>
                    <a href="#" class="btn btn-light rounded-pill px-4 py-2 fw-bold fs-5 btn-hover-dark">Khám Phá Ngay</a>
                </div>
            </section>

            <section class="mt-5 pt-4">
                <div class="d-flex justify-content-between align-items-end mb-4">
                    <h2 class="fw-bold fs-1">Nổi Bật Tuần Này</h2>
                    <div class="d-none d-md-flex gap-2 mb-2">
                        <button class="btn btn-light rounded-circle border p-3"><i class="fw-bold">&lt;</i></button>
                        <button class="btn btn-light rounded-circle border p-3"><i class="fw-bold">&gt;</i></button>
                    </div>
                </div>

                <div class="horizontal-scroller pb-4">
                    @if (Model.DanhSachHoaNoiBat.Any())
                    {
                        @foreach (var hoa in Model.DanhSachHoaNoiBat)
                        {
                            <div class="product-card">
                                <img src="@(string.IsNullOrEmpty(hoa.LinkHinhAnh) ? "https://via.placeholder.com/800" : hoa.LinkHinhAnh)"
                                     alt="@hoa.TenHoa"
                                     class="img-fluid mb-3" style="width: 100%; height: 250px; object-fit: cover;">
                                <h4 class="fw-bold">@hoa.TenHoa</h4>
                                <p class="text-secondary fs-5 text-truncate">@(string.IsNullOrEmpty(hoa.MoTa) ? "Sản phẩm tươi mới" : hoa.MoTa)</p>
                                <p class="fw-bold fs-5 mt-2">@hoa.GiaBan.ToString("N0") đ</p>
                            </div>
                        }
                    }
                    else
                    {
                        <p class="text-secondary fs-5">Hiện chưa có hoa nổi bật tuần này.</p>
                    }
                </div>
            </section>

            <section class="break-container full-width-image position-relative mt-5">
                <div class="position-absolute top-50 start-50 translate-middle text-center text-white w-100">
                    <h2 class="display-3 fw-bold text-uppercase">Vẻ Đẹp Từ Thiên Nhiên</h2>
                    <a href="#" class="btn btn-light rounded-pill px-4 py-2 mt-3 fw-bold btn-hover-dark">Tìm Hiểu Thêm</a>
                </div>
            </section>

            <section class="mt-5 pt-5 pb-5 mb-5 text-center px-md-5 mx-md-5">
                <h2 class="display-5 fw-bold font-italic" style="letter-spacing: -1px; line-height: 1.2;">
                    "Hoa là ngôn ngữ vô thanh của tình yêu, là nụ cười rạng rỡ nhất mà Trái Đất dành tặng cho chúng ta."
                </h2>
                <div class="mt-4 pt-3">
                    @if (HttpContext.Session.GetString("UserEmail") == null)
                    {
                        <p class="fs-5 text-secondary mb-3">Tham gia cùng chúng tôi để nhận những ưu đãi đặc biệt.</p>
                        <a class="btn btn-dark rounded-pill px-5 py-3 fs-5 fw-bold" asp-page="/DangKy">Đăng ký thành viên</a>
                        <p class="mt-3"><a class="text-dark fw-bold" asp-page="/DangNhap">Đã có tài khoản? Đăng nhập</a></p>
                    }
                </div>
            </section>
        </div>
    }
</div>

<style>
    /* Style riêng cho các thẻ card của trang Admin */
    .hover-shadow:hover {
        transform: translateY(-5px);
        transition: all 0.3s ease;
        box-shadow: 0 1rem 3rem rgba(0,0,0,.175) !important;
    }
</style>