@page
@model razor_page.Pages.Admin.Hoa.CreateModel
@{
    ViewData["Title"] = "Tạo mới Hoa";
}

<h1>Tạo mới Hoa</h1>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div class="form-group mb-3">
                <label asp-for="Hoa.TenHoa" class="control-label">Tên Hoa</label>
                <input asp-for="Hoa.TenHoa" class="form-control" />
            </div>
            <div class="form-group mb-3">
                <label asp-for="Hoa.GiaBan" class="control-label">Giá Bán</label>
                <input asp-for="Hoa.GiaBan" class="form-control" type="number" />
            </div>
            <div class="form-group mb-3">
                <label asp-for="Hoa.LinkHinhAnh" class="control-label">Link Hình Ảnh</label>
                <input asp-for="Hoa.LinkHinhAnh" class="form-control" />
            </div>
            <div class="form-group mb-3">
                <label asp-for="Hoa.MoTa" class="control-label">Mô Tả</label>
                <textarea asp-for="Hoa.MoTa" class="form-control"></textarea>
            </div>
            <div class="form-group">
                <input type="submit" value="Tạo" class="btn btn-primary" />
                <a asp-page="Index" class="btn btn-secondary">Quay lại</a>
            </div>
        </form>
    </div>
</div>