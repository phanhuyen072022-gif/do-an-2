@page
@model razor_page.Pages.Admin.NguoiDung.CreateModel
@{
    ViewData["Title"] = "Tạo mới Người Dùng";
}

<h1>Tạo mới Người Dùng</h1>

<div class="row">
    <div class="col-md-6">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group mb-3">
                <label asp-for="NguoiDung.TenNguoiDung" class="control-label">Tên Người Dùng</label>
                <input asp-for="NguoiDung.TenNguoiDung" class="form-control" />
                <span asp-validation-for="NguoiDung.TenNguoiDung" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="NguoiDung.Email" class="control-label">Email</label>
                <input asp-for="NguoiDung.Email" class="form-control" type="email" />
                <span asp-validation-for="NguoiDung.Email" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="NguoiDung.MatKhau" class="control-label">Mật Khẩu</label>
                @* Để type="text" hoặc "password" tùy nhu cầu hiển thị *@
                <input asp-for="NguoiDung.MatKhau" class="form-control" type="text" />
                <span asp-validation-for="NguoiDung.MatKhau" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="NguoiDung.Quyen" class="control-label">Quyền</label>
                <select asp-for="NguoiDung.Quyen" class="form-control">
                    <option value="KhachHang">Khách Hàng</option>
                    <option value="Admin">Admin</option>
                </select>
                <span asp-validation-for="NguoiDung.Quyen" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="NguoiDung.LinkAvatar" class="control-label">Link Avatar (URL)</label>
                <input asp-for="NguoiDung.LinkAvatar" class="form-control" />
                <span asp-validation-for="NguoiDung.LinkAvatar" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Tạo" class="btn btn-primary" />
                <a asp-page="Index" class="btn btn-secondary">Quay lại</a>
            </div>
        </form>
    </div>
</div>