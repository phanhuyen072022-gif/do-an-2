@page
@model razor_page.Pages.Admin.DanhSachNguoiDungModel
@{
    ViewData["Title"] = "Quản lý người dùng";
}

<div class="container mt-4">
    <h2 class="text-primary mb-3">Danh sách người dùng (Admin)</h2>

    <table class="table table-bordered table-hover">
        <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th>Tên người dùng</th>
                <th>Email</th>
                <th>Quyền (Role)</th>
                <th>Hành động</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.DanhSachUsers != null && Model.DanhSachUsers.Count > 0)
            {
                foreach (var user in Model.DanhSachUsers)
                {
                    <tr>
                        <td>@user.NguoiDungId</td>
                        <td>@user.TenNguoiDung</td>
                        <td>@user.Email</td>
                        <td>
                            @if (user.Quyen == "Admin")
                            {
                                <span class="badge bg-danger">Admin</span>
                            }
                            else
                            {
                                <span class="badge bg-info text-dark">Khách hàng</span>
                            }
                        </td>
                        <td>
                            @* Nút sửa/xóa (Bạn có thể phát triển thêm sau) *@
                            <button class="btn btn-sm btn-warning">Sửa</button>
                            <button class="btn btn-sm btn-danger">Xóa</button>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="5" class="text-center">Không có người dùng nào.</td>
                </tr>
            }
        </tbody>
    </table>
</div>